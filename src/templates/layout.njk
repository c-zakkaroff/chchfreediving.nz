  <meta name="author" content="Nick Cameron">
  <meta name="description" content="Website of the Christchurch Freediving Club: freediving and apnea training, education, and competition in Christchurch, Canterbury, New Zealand.">

  <meta property="og:title" content="Christchurch Freediving Club">
  <meta property="og:description" content="Website of the Christchurch Freediving Club: freedive and apnea training, education, and competition in Christchurch, Canterbury, New Zealand.">
  <meta property="og:image" content="https://www.chchfreediving.nz/assets/octo-favicon.png">

  <meta property="twitter:title" content="Christchurch Freediving Club">
  <meta property="twitter:description" content="Website of the Christchurch Freediving Club: freedive and apnea training, education, and competition in Christchurch, Canterbury, New Zealand.">
